{
    "version": 2,
    "builds": [
        {
            "src": "src/main.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "../../packages/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/docs",
            "dest": "src/main.ts"
        },
        {
            "src": "/(.*)",
            "dest": "src/main.ts",
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Methods": "GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS",
                "Access-Control-Allow-Headers": "Content-Type, Authorization"
            }
        }
    ]
}